<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <!-- bootstrap nav start -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="logo" href="/login">Padget</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- <li class="nav-item dropdown">
                <a class="nav-link" href="/info/allDetails">
                  All-Details
                </a>
              </li> -->
            </ul>
            <a href="/logout" class="d-flex btn btn-outline-primary">Logout</a>
          </div>
        </div>
      </nav>
      <!-- bootstrap nav end -->
       <div class="heading">
        <h1>Hello' <%= user.name %></h1>
       </div>
        <div class="forms">
            <!-- bootstrap  form start -->
            <form action="/info/<%= user._id %>" method="post">
              <div class="mb-3">
                <label for="exampleSection1" class="form-label">Enter Section</label>
                <input type="text" placeholder="Like: SMT, BE, CFC" class="form-control" id="exampleSection1" name="section" aria-describedby="emailHelp">
              </div>
                <div class="mb-3">
                  <label for="exampleInputModel1" class="form-label">Enter Model</label>
                  <input type="text" placeholder="Enter Model" class="form-control" id="exampleInputModel1" name="model" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputStd_M.P1" class="form-label">Enter Std_M.P</label>
                  <input type="number" placeholder="Enter Std_M.P" name="stdMp" class="form-control" id="exampleInputStd_M.P1">
                </div>
                <div class="mb-3">
                    <label for="exampleActual_M.P1" class="form-label">Enter Actual_M.P</label>
                    <input type="number" placeholder="Enter Actual_M.P" name="actualMp" class="form-control" id="exampleActual_M.P1">
                </div>
                <div class="mb-3">
                    <label for="exampleStd_UPH1" class="form-label">Std_UPH</label>
                    <input type="number" placeholder="Enter Std_UPH" name="stdUph" class="form-control" id="exampleStd_UPH1">
                </div>
                <div class="mb-3">
                  <label for="exampleActual_UPH1" class="form-label">Actual_UPH</label>
                  <input type="number" placeholder="Enter Actual_UPH" name="actualUph" class="form-control" id="exampleActual_UPH1">
              </div>
                <div class="mb-3">
                    <label for="exampleProject1" class="form-label">Enter Project Name</label>
                    <input type="text" placeholder="Like: Xiaomi, Compal, Lenovo, Moto, Jio, Acer" name="project" class="form-control" id="exampleProject1">
                </div>
                <!-- <div class="mb-3 form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                  <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div> -->
                <button type="submit" class="btn btn-primary">Create</button>
              </form>
             <!-- bootstrap form end -->
        </div>
        <div class="boxs">
            <% user.details.forEach((val)=>{ %>
                <div class="box">
                    <div class="info">
                        <h5>Section : <%= val.section %></h5>
                        <h5>Model : <%= val.model %></h5>
                        <h5>Std_M.P : <%= val.stdMp %></h5>
                        <h5>Actual_M.P : <%= val.actualMp %></h5>
                        <h5>Std_UPH : <%= val.stdUph %></h5>
                        <h5>Actual_UPH: <%= val.actualUph %></h5>
                        <h5>Project: <%= val.project %></h5>
                    </div>
                    <div class="links">
                        <a href="/info/edit/<%= val._id %>" class="editLink">Edit</a>
                        <a href="/info/delete/<%= val._id %>" class="deleteLink">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>