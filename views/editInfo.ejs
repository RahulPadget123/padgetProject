<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <!-- bootstrap nav start -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="logo" href="/login">Padget</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- <li class="nav-item dropdown">
                <a class="nav-link" href="/info/allDetails">
                  All-Details
                </a>
              </li> -->
            </ul>
            <a href="/profile" class="d-flex btn btn-outline-primary">Back</a>
          </div>
        </div>
      </nav>
      <!-- bootstrap nav end -->
       <div class="heading">
        <h1>Edit Info</h1>
       </div>
        <div class="forms">
            <!-- bootstrap  form start -->
            <form action="/info/editInfo/<%= info._id %>" method="post">
              <div class="mb-3">
                <label for="exampleSection1" class="form-label">Enter Section</label>
                <input type="text" placeholder="Like: SMT, BE, CFS" value="<%= info.section %>" class="form-control" id="exampleSectionModel1" name="section" aria-describedby="emailHelp">
              </div>
                <div class="mb-3">
                  <label for="exampleInputModel1" class="form-label">Enter Model</label>
                  <input type="text" placeholder="Enter Model" value="<%= info.model %>" class="form-control" id="exampleInputModel1" name="model" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputStd_M.P1" class="form-label">Enter Std_M.P</label>
                  <input type="number" placeholder="Enter Std_M.P" value="<%= info.stdMp %>" name="stdMp" class="form-control" id="exampleInputStd_M.P1">
                </div>
                <div class="mb-3">
                    <label for="exampleActual_M.P1" class="form-label">Enter Actual_M.P</label>
                    <input type="number" placeholder="Enter Actual_M.P" value="<%= info.actualMp %>" name="actualMp" class="form-control" id="exampleActual_M.P1">
                </div>
                <div class="mb-3">
                    <label for="exampleStd_UPH1" class="form-label">Std_UPH</label>
                    <input type="number" placeholder="Enter Std_UPH" value="<%= info.stdUph %>" name="stdUph" class="form-control" id="exampleStd_UPH1">
                </div>
                <div class="mb-3">
                  <label for="exampleActual_UPH1" class="form-label">Actual_UPH</label>
                  <input type="number" placeholder="Enter Actual_UPH" value="<%= info.actualUph %>" name="actualUph" class="form-control" id="exampleActual_UPH1">
              </div>
                <div class="mb-3">
                    <label for="exampleProject1" class="form-label">Enter Project Name</label>
                    <input type="text" placeholder="Like: Xiaomi, Compal, Lenovo, Moto, Jio, Acer" value="<%= info.project %>" name="project" class="form-control" id="exampleProject1">
                </div>
                <!-- <div class="mb-3 form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                  <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div> -->
                <button type="submit" class="btn btn-primary">Edit</button>
              </form>
             <!-- bootstrap form end -->
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>